<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>nl.theepicblock.intellijkdl</id>
    <name>kdl</name>
    <vendor>theepicblock</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="nl.theepicblock.intellijkdl.services.MyApplicationService"/>
        <projectService serviceImplementation="nl.theepicblock.intellijkdl.services.MyProjectService"/>
        <fileType
                name="Kdl"
                implementationClass="nl.theepicblock.intellijkdl.KdlFileType"
                fieldName="INSTANCE"
                language="kdl"
                extensions="kdl"/>
        <lang.parserDefinition
                language="kdl"
                implementationClass="nl.theepicblock.intellijkdl.KdlParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="kdl"
                implementationClass="nl.theepicblock.intellijkdl.highlighting.KdlSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="nl.theepicblock.intellijkdl.highlighting.KdlColorSettingsPage"/>
        <highlightVisitor
                implementation="nl.theepicblock.intellijkdl.highlighting.KdlRainbowVisitor"/>
        <annotator
                language="kdl"
                implementationClass="nl.theepicblock.intellijkdl.highlighting.KdlAnnotator"/>
    </extensions>

    <applicationListeners>
        <listener class="nl.theepicblock.intellijkdl.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
